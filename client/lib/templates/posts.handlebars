<div class="row-fluid">
    <div class="span7 mainbody">
        <img src="./img/logo.jpg"><br>
        {{#each post in controller.view}}
            <div class="post">
                <div class="posttitle">
                    {{#linkTo post post}}{{post.title}}{{/linkTo}}
                </div>
                <div class="postbody">
                    {{markdown post.content}}
                </div>
        {{/each}}
        {{view App.PaginationView}}
    </div>
    <div class="span2">
        {{#each tag in App.tagsController}}
            <div class="posttag">{{tag.title}}</div><br>
        {{/each}}
    </div>
</div>
